<?xml version="1.0" encoding="iso-8859-1" ?>

<table>
  <base>CRM/Funds</base>
  <class>FundSubAccount</class>
  <name>civicrm_o8_fund_sub_account</name>
  <comment>Fund SubAccount</comment>
  <log>true</log>

  <field>
    <name>id</name>
    <type>int unsigned</type>
    <required>true</required>
    <comment>Unique FundSubAccount ID</comment>
    <html>
      <type>Number</type>
    </html>
  </field>
  <primaryKey>
    <name>id</name>
    <autoincrement>true</autoincrement>
  </primaryKey>

  <field>
    <name>code</name>
    <type>varchar</type>
    <length>255</length>
    <label>SubAccount Code</label>
    <comment>SubAccount Code</comment>
    <required>true</required>
    <import>true</import>
    <export>true</export>
  </field>

  <index>
    <name>index_code</name>
    <fieldName>code</fieldName>
    <unique>true</unique>
  </index>

  <field>
    <name>name</name>
    <type>varchar</type>
    <length>255</length>
    <label>SubAccount Name</label>
    <comment>SubAccount Name</comment>
    <required>true</required>
    <import>true</import>
    <export>true</export>
  </field>

  <index>
    <name>index_name</name>
    <fieldName>code</fieldName>
  </index>

  <field>
    <name>description</name>
    <type>text</type>
    <title>Description</title>
    <html>
      <type>TextArea</type>
      <rows>2</rows>
      <cols>60</cols>
    </html>
    <comment>Optional verbose description of the subaccount.</comment>
  </field>

  <field>
    <name>fund_category_id</name>
    <title>Category</title>
    <type>int unsigned</type>
    <required>true</required>
    <comment>FK to civicrm_o8_fund_category</comment>
    <html>
      <label>Category</label>
    </html>
  </field>
  <foreignKey>
    <name>fund_category_id</name>
    <table>civicrm_o8_fund_category</table>
    <key>id</key>
  </foreignKey>

  <field>
    <name>created_at</name>
    <type>timestamp</type>
    <title>SubAccount Created Date</title>
    <required>false</required>
    <default>CURRENT_TIMESTAMP</default>
    <comment>Date and time the subaccount was created</comment>
  </field>

  <field>
    <name>created_by</name>
    <type>int unsigned</type>
    <title>SubAccount Created Contact</title>
    <comment>FK to Created Contact</comment>
  </field>
  <foreignKey>
    <name>created_by</name>
    <table>civicrm_contact</table>
    <key>id</key>
    <onDelete>RESTRICT</onDelete>
  </foreignKey>

  <field>
    <name>modified_at</name>
    <type>timestamp</type>
    <title>SubAccount Modified Date</title>
    <required>false</required>
    <default>CURRENT_TIMESTAMP</default>
    <comment>Date and time the subaccount was modified</comment>
  </field>

  <field>
    <name>modified_by</name>
    <type>int unsigned</type>
    <title>SubAccount Modified Contact</title>
    <comment>FK to Modified Contact</comment>
  </field>
  <foreignKey>
    <name>modified_by</name>
    <table>civicrm_contact</table>
    <key>id</key>
    <onDelete>RESTRICT</onDelete>
  </foreignKey>

</table>
