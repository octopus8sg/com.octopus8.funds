  <field>
    <name>created_at</name>
    <type>timestamp</type>
    <title>Account Created Date</title>
    <required>false</required>
    <default>CURRENT_TIMESTAMP</default>
    <comment>Date and time the account was created</comment>
  </field>

  <field>
    <name>created_by</name>
    <type>int unsigned</type>
    <title>Account Created Contact</title>
    <comment>FK to Created Contact</comment>
  </field>
  <foreignKey>
    <name>created_by</name>
    <table>civicrm_contact</table>
    <key>id</key>
    <onDelete>RESTRICT</onDelete>
  </foreignKey>

  <field>
    <name>modified_at</name>
    <type>timestamp</type>
    <title>Account Modified Date</title>
    <required>false</required>
    <default>CURRENT_TIMESTAMP</default>
    <comment>Date and time the account was modified</comment>
  </field>

  <field>
    <name>modified_by</name>
    <type>int unsigned</type>
    <title>Account Modified Contact</title>
    <comment>FK to Modified Contact</comment>
  </field>
  <foreignKey>
    <name>modified_by</name>
    <table>civicrm_contact</table>
    <key>id</key>
    <onDelete>RESTRICT</onDelete>
  </foreignKey>

